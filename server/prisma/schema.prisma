generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id          Int          @id @default(autoincrement())
  name        String
  email       String       @unique
  role        String       // STUDENT, INSTRUCTOR, ADMIN
  enrollments Enrollment[]
  sections    Section[]    @relation("Instructor")
  createdAt   DateTime     @default(now())
  passwordHash String?
  notifications Notification[]
}

model Course {
  id        Int      @id @default(autoincrement())
  code      String   @unique
  title     String
  credits   Int
  sections  Section[]
}

model Term {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  sections Section[]
}

model Section {
  id           Int          @id @default(autoincrement())
  course       Course       @relation(fields: [courseId], references: [id])
  courseId     Int
  term         Term         @relation(fields: [termId], references: [id])
  termId       Int
  instructor   User?        @relation("Instructor", fields: [instructorId], references: [id])
  instructorId Int?
  room         String?
  capacity     Int?
  enrollments  Enrollment[]
}

model Enrollment {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  section   Section  @relation(fields: [sectionId], references: [id])
  sectionId Int
  status    String   @default("ENROLLED") // ENROLLED, WAITLISTED, DROPPED
  createdAt DateTime @default(now())
}

model Notification {
  id         Int      @id @default(autoincrement())
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  title      String
  message    String
  category   String?  // academic, system, payment, registration
  type       String?  // info, success, warning, error
  read       Boolean  @default(false)
  priority   String?  // high, medium, low
  createdAt  DateTime @default(now())
  @@index([userId])
}


